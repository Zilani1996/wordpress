pipeline{
agent any

 environment {
        DOCKER_REGISTRY = 'your-digital-ocean-registry-url'
        KUBE_CONFIG = credentials('your-kubeconfig-credential-id')
    }

stages{
  stage("code clone"){
   steps{
    git url :"https://github.com/Zilani1996/wordpress.git",branch:"master"
    }
  }

 stage('Build') {
            steps {
                script {
                    def appImage = docker.build("${DOCKER_REGISTRY}/your-app:${env.BUILD_NUMBER}")
                    appImage.push()
                }
            }
        }

 stage('Deploy') {
            steps {
                script {
                    def kubeConfigPath = writeKubeConfig("${env.WORKSPACE}/kubeconfig", env.KUBE_CONFIG)
                    sh "kubectl --kubeconfig=${kubeConfigPath} apply -f deploy.yaml"
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    def kubeConfigPath = writeKubeConfig("${env.WORKSPACE}/kubeconfig", env.KUBE_CONFIG)
                    sh "kubectl --kubeconfig=${kubeConfigPath} delete -f kubernetes-deployment.yaml"
                }
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}

def writeKubeConfig(String filePath, String kubeConfig) {
    def kubeConfigContent = credentials(kubeConfig).replaceAll("\r\n?", "\n")
    writeFile file: filePath, text: kubeConfigContent
    return filePath
}

    
